subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'start_line' => 3,
            'src' => ' print "1..2\\n" ;',
            'indent' => 0,
            'has_warnings' => 0,
            'end_line' => 3,
            'token_num' => 3,
            'block_id' => 0
          },
          {
            'indent' => 0,
            'src' => ' $x = \'test\' ;',
            'start_line' => 7,
            'end_line' => 7,
            'has_warnings' => 1,
            'token_num' => 4,
            'block_id' => 0
          },
          {
            'src' => ' if ( $x eq $x ) { print "ok 1\\n" ; }',
            'indent' => 0,
            'start_line' => 8,
            'end_line' => 8,
            'has_warnings' => 1,
            'token_num' => 11,
            'block_id' => 0
          },
          {
            'has_warnings' => 0,
            'end_line' => 8,
            'token_num' => 3,
            'block_id' => 1,
            'start_line' => 8,
            'indent' => 1,
            'src' => ' print "ok 1\\n" ;'
          },
          {
            'start_line' => 8,
            'src' => ' else { print "not ok 1\\n" ; }',
            'indent' => 0,
            'block_id' => 0,
            'token_num' => 6,
            'has_warnings' => 0,
            'end_line' => 8
          },
          {
            'has_warnings' => 0,
            'end_line' => 8,
            'block_id' => 2,
            'token_num' => 3,
            'src' => ' print "not ok 1\\n" ;',
            'indent' => 1,
            'start_line' => 8
          },
          {
            'token_num' => 11,
            'block_id' => 0,
            'has_warnings' => 1,
            'end_line' => 9,
            'start_line' => 9,
            'src' => ' if ( $x ne $x ) { print "not ok 2\\n" ; }',
            'indent' => 0
          },
          {
            'src' => ' print "not ok 2\\n" ;',
            'indent' => 1,
            'start_line' => 9,
            'end_line' => 9,
            'has_warnings' => 0,
            'token_num' => 3,
            'block_id' => 3
          },
          {
            'has_warnings' => 0,
            'end_line' => 9,
            'block_id' => 0,
            'token_num' => 6,
            'indent' => 0,
            'src' => ' else { print "ok 2\\n" ; }',
            'start_line' => 9
          },
          {
            'start_line' => 9,
            'indent' => 1,
            'src' => ' print "ok 2\\n" ;',
            'token_num' => 3,
            'block_id' => 4,
            'has_warnings' => 0,
            'end_line' => 9
          }
        ]
, 'Compiler::Lexer::get_groups_by_syntax_level');
};

