subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'token_num' => 6,
            'src' => ' chdir \'t\' if -d \'t\' ;',
            'indent' => 1,
            'start_line' => 3,
            'block_id' => 1,
            'has_warnings' => 0,
            'end_line' => 3
          },
          {
            'has_warnings' => 0,
            'end_line' => 4,
            'src' => ' @INC = "../lib" ;',
            'token_num' => 4,
            'indent' => 1,
            'start_line' => 4,
            'block_id' => 1
          },
          {
            'block_id' => 1,
            'start_line' => 5,
            'indent' => 1,
            'token_num' => 3,
            'src' => ' require \'./test.pl\' ;',
            'end_line' => 5,
            'has_warnings' => 0
          },
          {
            'has_warnings' => 0,
            'end_line' => 8,
            'token_num' => 7,
            'src' => ' use Config qw(%Config) ;',
            'start_line' => 8,
            'indent' => 0,
            'block_id' => 0
          },
          {
            'block_id' => 0,
            'start_line' => 10,
            'indent' => 0,
            'token_num' => 12,
