subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'src' => ' @INC = \'..\' if -f \'../TestInit.pm\' ;',
            'indent' => 1,
            'start_line' => 6,
            'has_warnings' => 0,
            'end_line' => 6,
            'token_num' => 7,
            'block_id' => 1
          },
          {
            'end_line' => 8,
            'has_warnings' => 0,
            'token_num' => 7,
            'block_id' => 0,
            'src' => ' use TestInit qw(T A) ;',
            'indent' => 0,
            'start_line' => 8
          },
          {
            'token_num' => 3,
            'block_id' => 0,
            'end_line' => 9,
            'has_warnings' => 0,
            'src' => ' use strict ;',
            'indent' => 0,
            'start_line' => 9
          },
          {
            'end_line' => 11,
            'has_warnings' => 0,
            'block_id' => 0,
            'token_num' => 3,
            'start_line' => 11,
            'indent' => 0,
            'src' => ' require \'t/test.pl\' ;'
          },
          {
            'block_id' => 0,
            'token_num' => 8,
            'end_line' => 12,
            'has_warnings' => 1,
            'src' => ' my $source = find_git_or_skip ( \'all\' ) ;',
            'indent' => 0,
            'start_line' => 12
          },
          {
            'start_line' => 13,
            'indent' => 0,
            'src' => ' chdir $source or die "Can\'t chdir to $source: $!" ;',
            'end_line' => 13,
            'has_warnings' => 1,
            'token_num' => 6,
            'block_id' => 0
          },
          {
            'indent' => 0,
            'src' => ' system "$^X Porting/bench.pl --action=selftest" ;',
            'start_line' => 15,
            'token_num' => 3,
            'block_id' => 0,
            'end_line' => 15,
            'has_warnings' => 0
          }
        ]
, 'Compiler::Lexer::get_groups_by_syntax_level');
};

