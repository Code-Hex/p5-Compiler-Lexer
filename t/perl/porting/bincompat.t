subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'start_line' => 2,
            'indent' => 0,
            'src' => ' use strict ;',
            'end_line' => 2,
            'has_warnings' => 0,
            'block_id' => 0,
            'token_num' => 3
          },
          {
            'src' => ' require \'./test.pl\' ;',
            'indent' => 0,
            'start_line' => 3,
            'token_num' => 3,
            'block_id' => 0,
            'end_line' => 3,
            'has_warnings' => 0
          },
          {
            'token_num' => 13,
            'block_id' => 0,
            'has_warnings' => 1,
            'end_line' => 4,
            'src' => ' skip_all ( "Sorting order differs under EBCDIC" ) if $: : IS_EBCDIC || $: : IS_EBCDIC ;',
            'indent' => 0,
            'start_line' => 4
          },
          {
            'src' => ' use Config ;',
            'indent' => 0,
            'start_line' => 6,
            'block_id' => 0,
            'token_num' => 3,
            'has_warnings' => 0,
            'end_line' => 6
          },
          {
            'block_id' => 0,
            'token_num' => 5,
            'has_warnings' => 1,
            'end_line' => 8,
            'indent' => 0,
            'src' => ' plan ( 2 ) ;',
            'start_line' => 8
          },
          {
            'token_num' => 8,
            'block_id' => 0,
            'has_warnings' => 0,
            'end_line' => 13,
            'indent' => 0,
            'src' => ' my @to_check = qw(bincompat_options non_bincompat_options) ;',
            'start_line' => 13
          },
          {
            'src' => ' my @V = map { s/^ //r } Internals::V ( ) ;',
