subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'has_warnings' => 0,
            'end_line' => 2,
            'src' => ' use strict ;',
            'token_num' => 3,
            'start_line' => 2,
            'indent' => 0,
            'block_id' => 0
          },
          {
            'start_line' => 3,
            'indent' => 0,
            'block_id' => 0,
            'src' => ' require \'./test.pl\' ;',
            'token_num' => 3,
            'end_line' => 3,
            'has_warnings' => 0
          },
          {
            'end_line' => 4,
            'has_warnings' => 1,
            'block_id' => 0,
            'start_line' => 4,
            'indent' => 0,
            'token_num' => 13,
            'src' => ' skip_all ( "Sorting order differs under EBCDIC" ) if $: : IS_EBCDIC || $: : IS_EBCDIC ;'
          },
          {
            'start_line' => 6,
            'indent' => 0,
            'block_id' => 0,
            'token_num' => 3,
            'src' => ' use Config ;',
            'end_line' => 6,
