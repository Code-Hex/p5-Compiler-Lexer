subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'indent' => 1,
            'src' => ' @INC = \'..\' if -f \'../TestInit.pm\' ;',
            'start_line' => 14,
            'token_num' => 7,
            'block_id' => 1,
            'has_warnings' => 0,
            'end_line' => 14
          },
          {
            'indent' => 0,
            'src' => ' use TestInit qw(T A) ;',
            'start_line' => 16,
            'end_line' => 16,
            'has_warnings' => 0,
            'block_id' => 0,
            'token_num' => 7
          },
          {
            'block_id' => 0,
            'token_num' => 3,
            'has_warnings' => 0,
            'end_line' => 17,
            'indent' => 0,
            'src' => ' use strict ;',
            'start_line' => 17
          },
          {
            'end_line' => 19,
            'has_warnings' => 0,
            'token_num' => 3,
            'block_id' => 0,
            'start_line' => 19,
            'indent' => 0,
            'src' => ' require \'t/test.pl\' ;'
          },
          {
            'token_num' => 8,
            'block_id' => 0,
            'has_warnings' => 1,
            'end_line' => 20,
            'src' => ' my $source = find_git_or_skip ( \'all\' ) ;',
            'indent' => 0,
            'start_line' => 20
          },
          {
            'end_line' => 21,
            'has_warnings' => 1,
            'token_num' => 6,
            'block_id' => 0,
            'src' => ' chdir $source or die "Can\'t chdir to $source: $!" ;',
            'indent' => 0,
            'start_line' => 21
          },
          {
            'token_num' => 3,
            'block_id' => 0,
            'has_warnings' => 0,
            'end_line' => 23,
            'src' => ' system "$^X Porting/cmpVERSION.pl --tap" ;',
            'indent' => 0,
            'start_line' => 23
          }
        ]
, 'Compiler::Lexer::get_groups_by_syntax_level');
};

