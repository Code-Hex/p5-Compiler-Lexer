subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'has_warnings' => 1,
            'end_line' => 3,
            'block_id' => 0,
            'token_num' => 5,
            'start_line' => 3,
            'indent' => 0,
            'src' => ' $dummy = defined $& ;'
          },
          {
            'token_num' => 23,
            'block_id' => 0,
            'has_warnings' => 1,
            'end_line' => 9,
            'src' => ' for $file ( \'re/subst.t\' , \'t/re/subst.t\' , \':re:subst.t\' ) { if ( -r $file ) { do "./$file" ; exit ; } }',
            'indent' => 0,
            'start_line' => 4
          },
          {
            'block_id' => 1,
            'token_num' => 12,
            'has_warnings' => 1,
            'end_line' => 8,
            'src' => ' if ( -r $file ) { do "./$file" ; exit ; }',
            'indent' => 1,
            'start_line' => 5
          },
          {
            'start_line' => 6,
            'indent' => 2,
            'src' => ' do "./$file" ;',
            'token_num' => 3,
            'block_id' => 2,
            'end_line' => 6,
            'has_warnings' => 0
          },
          {
            'start_line' => 7,
            'src' => ' exit ;',
            'indent' => 2,
            'end_line' => 7,
            'has_warnings' => 0,
            'block_id' => 2,
            'token_num' => 2
          },
          {
            'token_num' => 3,
            'block_id' => 0,
            'has_warnings' => 0,
            'end_line' => 10,
            'start_line' => 10,
            'indent' => 0,
            'src' => ' die "Cannot find re/subst.t or t/re/subst.t\\n" ;'
          }
        ]
, 'Compiler::Lexer::get_groups_by_syntax_level');
};

