subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'indent' => 1,
            'src' => ' $regex_sets = 1 ;',
            'start_line' => 8,
            'end_line' => 8,
            'has_warnings' => 1,
            'token_num' => 4,
            'block_id' => 1
          },
          {
            'has_warnings' => 1,
            'end_line' => 14,
            'block_id' => 0,
            'token_num' => 26,
            'indent' => 0,
            'src' => ' for $file ( \'./re/regexp.t\' , \'./t/re/regexp.t\' , \':re:regexp.t\' ) { if ( -r $file ) { do $file or die $@ ; exit ; } }',
            'start_line' => 9
          },
          {
            'end_line' => 13,
            'has_warnings' => 1,
            'token_num' => 15,
            'block_id' => 2,
            'start_line' => 10,
            'indent' => 1,
            'src' => ' if ( -r $file ) { do $file or die $@ ; exit ; }'
          },
          {
            'has_warnings' => 1,
            'end_line' => 11,
            'token_num' => 6,
            'block_id' => 3,
            'start_line' => 11,
            'src' => ' do $file or die $@ ;',
            'indent' => 2
          },
          {
            'start_line' => 12,
            'src' => ' exit ;',
            'indent' => 2,
            'token_num' => 2,
            'block_id' => 3,
            'has_warnings' => 0,
            'end_line' => 12
          },
          {
            'end_line' => 15,
            'has_warnings' => 0,
            'block_id' => 0,
            'token_num' => 3,
            'start_line' => 15,
            'indent' => 0,
            'src' => ' die "Cannot find ./re/regexp.t or ./t/re/regexp.t\\n" ;'
          }
        ]
, 'Compiler::Lexer::get_groups_by_syntax_level');
};

