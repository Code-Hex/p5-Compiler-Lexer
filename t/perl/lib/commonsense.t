@INC = '../lib';
require Config; import Config;
if (($Config{'extensions'} !~ /\bFcntl\b/) ){
  print "Bail out! Perl configured without Fcntl module\n";
  exit 0;
}
if (($Config{'extensions'} !~ /\bIO\b/) ){
  print "Bail out! Perl configured without IO module\n";
  exit 0;
