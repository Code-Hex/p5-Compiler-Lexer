subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'indent' => 0,
            'src' => ' use Tie::Array ;',
            'start_line' => 5,
            'has_warnings' => 1,
            'end_line' => 5,
            'token_num' => 3,
            'block_id' => 0
          },
          {
            'has_warnings' => 0,
            'end_line' => 6,
            'token_num' => 5,
            'block_id' => 0,
            'start_line' => 6,
            'src' => ' my @orig_INC = @INC ;',
            'indent' => 0
          },
          {
            'start_line' => 7,
            'src' => ' tie @INC , \'Tie::StdArray\' ;',
            'indent' => 0,
            'block_id' => 0,
            'token_num' => 5,
            'end_line' => 7,
            'has_warnings' => 0
          },
          {
            'block_id' => 0,
            'token_num' => 4,
            'has_warnings' => 0,
            'end_line' => 8,
            'indent' => 0,
            'src' => ' @INC = @orig_INC ;',
            'start_line' => 8
          },
          {
            'start_line' => 9,
            'src' => ' for my $file ( \'./op/inccode.t\' , \'./t/op/inccode.t\' , \':op:inccode.t\' ) { if ( -r $file ) { do $file ; die $@ if $@ ; exit ; } }',
            'indent' => 0,
            'block_id' => 0,
            'token_num' => 29,
            'end_line' => 14,
            'has_warnings' => 1
          },
          {
            'token_num' => 17,
            'block_id' => 1,
            'has_warnings' => 1,
            'end_line' => 13,
            'start_line' => 10,
            'indent' => 1,
            'src' => ' if ( -r $file ) { do $file ; die $@ if $@ ; exit ; }'
          },
          {
            'indent' => 2,
            'src' => ' do $file ;',
            'start_line' => 11,
            'block_id' => 2,
