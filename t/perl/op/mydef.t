subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'block_id' => 1,
            'start_line' => 4,
            'indent' => 1,
            'src' => ' chdir \'t\' if -d \'t\' ;',
            'token_num' => 6,
            'end_line' => 4,
            'has_warnings' => 0
          },
          {
            'indent' => 1,
            'start_line' => 5,
            'block_id' => 1,
            'token_num' => 4,
            'src' => ' @INC = \'../lib\' ;',
            'end_line' => 5,
            'has_warnings' => 0
          },
          {
            'has_warnings' => 0,
            'end_line' => 6,
            'src' => ' require \'./test.pl\' ;',
            'token_num' => 3,
            'block_id' => 1,
            'start_line' => 6,
            'indent' => 1
          },
          {
            'end_line' => 9,
            'has_warnings' => 0,
            'indent' => 0,
            'start_line' => 9,
            'block_id' => 0,
            'token_num' => 3,
            'src' => ' use strict ;'
          },
          {
            'has_warnings' => 0,
            'end_line' => 11,
            'token_num' => 3,
            'src' => ' eval \'my $_\' ;',
            'start_line' => 11,
            'indent' => 0,
            'block_id' => 0
          },
          {
            'has_warnings' => 1,
            'end_line' => 12,
            'src' => ' like $@ , qr/^Can\'t use global \\$_ in "my" at / ;',
            'token_num' => 8,
            'block_id' => 0,
            'start_line' => 12,
            'indent' => 0
          },
          {
            'has_warnings' => 1,
            'end_line' => 14,
            'src' => ' done_testing ( ) ;',
            'token_num' => 4,
            'start_line' => 14,
            'indent' => 0,
            'block_id' => 0
          }
        ]
, 'Compiler::Lexer::get_groups_by_syntax_level');
};

subtest 'get_used_modules' => sub {
    my $modules = Compiler::Lexer->new('')->get_used_modules($script);
    is_deeply($modules, [
