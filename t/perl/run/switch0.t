subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'token_num' => 6,
            'src' => ' chdir \'t\' if -d \'t\' ;',
            'indent' => 1,
            'start_line' => 4,
            'block_id' => 1,
            'has_warnings' => 0,
            'end_line' => 4
          },
          {
            'start_line' => 5,
            'indent' => 1,
            'block_id' => 1,
            'src' => ' @INC = \'../lib\' ;',
            'token_num' => 4,
            'end_line' => 5,
            'has_warnings' => 0
          },
          {
            'end_line' => 6,
            'has_warnings' => 0,
            'indent' => 1,
            'start_line' => 6,
            'block_id' => 1,
            'token_num' => 3,
            'src' => ' require \'./test.pl\' ;'
          },
          {
            'end_line' => 9,
            'has_warnings' => 1,
            'start_line' => 9,
            'indent' => 0,
            'block_id' => 0,
            'src' => ' plan tests => 1 ;',
            'token_num' => 5
          },
          {
            'end_line' => 11,
            'has_warnings' => 1,
            'block_id' => 0,
            'start_line' => 11,
            'indent' => 0,
            'token_num' => 10,
            'src' => ' is ( ord $/ , 0 , \'$/ set to 0 via switch\' ) ;'
          }
        ]
, 'Compiler::Lexer::get_groups_by_syntax_level');
};

