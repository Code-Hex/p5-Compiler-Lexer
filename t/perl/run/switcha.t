subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'start_line' => 4,
            'indent' => 1,
            'src' => ' chdir \'t\' if -d \'t\' ;',
            'has_warnings' => 0,
            'end_line' => 4,
            'block_id' => 1,
            'token_num' => 6
          },
          {
            'start_line' => 5,
            'indent' => 1,
            'src' => ' @INC = \'../lib\' ;',
            'has_warnings' => 0,
            'end_line' => 5,
            'token_num' => 4,
            'block_id' => 1
          },
          {
            'token_num' => 3,
            'block_id' => 1,
            'end_line' => 6,
            'has_warnings' => 0,
            'start_line' => 6,
            'indent' => 1,
            'src' => ' require \'./test.pl\' ;'
          },
          {
            'block_id' => 1,
            'token_num' => 4,
            'end_line' => 7,
            'has_warnings' => 0,
            'indent' => 1,
            'src' => ' *ARGV = *DATA ;',
            'start_line' => 7
          },
          {
            'end_line' => 8,
            'has_warnings' => 1,
            'token_num' => 7,
            'block_id' => 1,
            'start_line' => 8,
            'indent' => 1,
            'src' => ' plan ( tests => 2 ) ;'
          },
          {
            'indent' => 0,
            'src' => ' chomp ;',
            'start_line' => 10,
            'token_num' => 2,
            'block_id' => 0,
            'has_warnings' => 0,
            'end_line' => 10
          },
          {
            'start_line' => 11,
            'indent' => 0,
            'src' => ' is ( $F [ 1 ] , \'ok\' , "testing split of string \'$_\'" ) ;',
            'has_warnings' => 1,
            'end_line' => 11,
            'block_id' => 0,
            'token_num' => 12
          }
        ]
, 'Compiler::Lexer::get_groups_by_syntax_level');
};

