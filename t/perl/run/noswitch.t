subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'token_num' => 6,
            'src' => ' chdir \'t\' if -d \'t\' ;',
            'indent' => 1,
            'start_line' => 4,
            'block_id' => 1,
            'has_warnings' => 0,
            'end_line' => 4
          },
          {
            'end_line' => 5,
            'has_warnings' => 0,
            'start_line' => 5,
            'indent' => 1,
            'block_id' => 1,
            'token_num' => 4,
            'src' => ' @INC = \'../lib\' ;'
          },
          {
            'has_warnings' => 0,
            'end_line' => 6,
            'src' => ' require \'./test.pl\' ;',
            'token_num' => 3,
            'block_id' => 1,
            'start_line' => 6,
            'indent' => 1
          },
          {
            'end_line' => 7,
            'has_warnings' => 0,
            'start_line' => 7,
            'block_id' => 1,
            'indent' => 1,
            'token_num' => 4,
            'src' => ' *ARGV = *DATA ;'
          },
          {
            'start_line' => 8,
            'block_id' => 1,
            'indent' => 1,
            'token_num' => 7,
            'src' => ' plan ( tests => 3 ) ;',
            'end_line' => 8,
            'has_warnings' => 1
          },
          {
            'start_line' => 11,
            'indent' => 0,
            'block_id' => 0,
            'src' => ' pass ( "first test" ) ;',
            'token_num' => 5,
            'end_line' => 11,
            'has_warnings' => 1
          },
          {
            'has_warnings' => 1,
            'end_line' => 12,
            'src' => ' is ( scalar <> , "ok 2\\n" , "read from aliased DATA filehandle" ) ;',
            'token_num' => 10,
            'start_line' => 12,
            'block_id' => 0,
            'indent' => 0
          },
          {
            'indent' => 0,
            'start_line' => 13,
            'block_id' => 0,
            'token_num' => 5,
            'src' => ' pass ( "last test" ) ;',
            'end_line' => 13,
            'has_warnings' => 1
          }
        ]
, 'Compiler::Lexer::get_groups_by_syntax_level');
};

