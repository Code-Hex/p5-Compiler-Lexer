    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'block_id' => 1,
            'token_num' => 6,
            'end_line' => 4,
            'has_warnings' => 0,
            'src' => ' chdir \'t\' if -d \'t\' ;',
            'indent' => 1,
            'start_line' => 4
          },
          {
            'token_num' => 4,
            'block_id' => 1,
            'end_line' => 5,
            'has_warnings' => 0,
            'start_line' => 5,
            'indent' => 1,
            'src' => ' @INC = \'../lib\' ;'
          },
          {
            'token_num' => 3,
            'block_id' => 1,
            'end_line' => 6,
            'has_warnings' => 0,
            'start_line' => 6,
            'indent' => 1,
            'src' => ' require \'./test.pl\' ;'
          },
          {
            'start_line' => 7,
            'src' => ' *ARGV = *DATA ;',
            'indent' => 1,
            'has_warnings' => 0,
            'end_line' => 7,
            'token_num' => 4,
            'block_id' => 1
          },
          {
            'start_line' => 8,
            'src' => ' plan ( tests => 2 ) ;',
            'indent' => 1,
            'end_line' => 8,
            'has_warnings' => 1,
            'token_num' => 7,
