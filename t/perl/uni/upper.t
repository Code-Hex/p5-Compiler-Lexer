subtest 'get_groups_by_syntax_level' => sub {
    my $lexer = Compiler::Lexer->new('');
    my $tokens = $lexer->tokenize($script);
    my $stmts = $lexer->get_groups_by_syntax_level($tokens, Compiler::Lexer::SyntaxType::T_Stmt);
    is_deeply($stmts, [
          {
            'indent' => 1,
            'start_line' => 2,
            'block_id' => 1,
            'token_num' => 6,
            'src' => ' chdir \'t\' if -d \'t\' ;',
            'end_line' => 2,
            'has_warnings' => 0
          },
          {
            'has_warnings' => 1,
            'end_line' => 6,
            'token_num' => 18,
            'src' => ' unless ( defined & DynaLoader::boot_DynaLoader ) { print ( "1..0 # miniperl: no Unicode::Normalize" ) ; exit ( 0 ) ; }',
            'start_line' => 3,
            'block_id' => 1,
            'indent' => 1
          },
          {
            'has_warnings' => 0,
            'end_line' => 4,
            'src' => ' print ( "1..0 # miniperl: no Unicode::Normalize" ) ;',
            'token_num' => 5,
            'start_line' => 4,
            'indent' => 2,
            'block_id' => 2
          },
          {
            'start_line' => 5,
            'block_id' => 2,
            'indent' => 2,
            'src' => ' exit ( 0 ) ;',
            'token_num' => 5,
            'end_line' => 5,
            'has_warnings' => 0
          },
          {
            'indent' => 1,
            'start_line' => 7,
            'block_id' => 1,
            'src' => ' require "uni/case.pl" ;',
            'token_num' => 3,
            'end_line' => 7,
            'has_warnings' => 0
          },
          {
            'end_line' => 10,
            'has_warnings' => 0,
            'start_line' => 10,
            'indent' => 0,
            'block_id' => 0,
            'token_num' => 4,
            'src' => ' use feature \'unicode_strings\' ;'
          },
          {
            'has_warnings' => 1,
            'end_line' => 13,
            'src' => ' is ( uc ( "\\x{3B1}\\x{345}\\x{301}" ) , "\\x{391}\\x{301}\\x{399}" , \'Verify moves YPOGEGRAMMENI\' ) ;',
            'token_num' => 12,
            'block_id' => 0,
            'start_line' => 12,
            'indent' => 0
          },
          {
            'indent' => 0,
            'start_line' => 15,
            'block_id' => 0,
            'src' => ' casetest ( 1 , "Uppercase_Mapping" , uc => sub { uc $_ [ 0 ] } , uc_with_appended_null_arg => sub { my $a = "" ; uc ( $_ [ 0 ] . $a ) } ) ;',
            'token_num' => 38,
            'end_line' => 19,
            'has_warnings' => 1
          },
          {
            'start_line' => 18,
